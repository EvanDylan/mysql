<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="app-redpacket"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zookeeper.cluster.ip}:${zookeeper.cluster.port},
                                            ${zookeeper.cluster.ip}:${zookeeper.cluster.port},
                                            ${zookeeper.cluster.ip}:${zookeeper.cluster.port}"
        session="${zookeeper.session.timeout}" timeout="${zookeeper.connect.timeout}" subscribe="false"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20882"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="org.rhine.redpacket.api.RedPacketTradeOrderService" ref="redPacketTradeOrderService" retries="3"/>
    <dubbo:service interface="org.rhine.redpacket.api.RedPacketAccountService" ref="redPacketAccountService" retries="3"/>

</beans>
